#!/bin/bash
# TaskManager App Launcher
# Opens Task Manager in Terminal and closes the launcher window

osascript <<'END'
tell application "Terminal"
    -- Store reference to current window (launcher)
    set launcherWindow to front window
    
    -- Open new terminal with Task Manager
    do script "cd /Users/kanetran29/Playground/mac-tasks-manager && python3 task_manager.py"
    activate
    
    -- Close the launcher window
    close launcherWindow
end tell
END
